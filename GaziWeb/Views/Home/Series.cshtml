<style>
    .movies {
        display: flex;
        align-items: center;
        overflow: auto;
        width: 100%;
    }

    .explanation {
        width: 200px;
        height: 150px;
        overflow-y: auto;
        margin: 8px;
        text-align: justify;
    }

    .rate {
        top: 0px;
        right: 0px;
        position: absolute;
        background: white;
        width: 27px;
        text-align: center;
        border-radius: 0px 0px 0px 15px;
    }

    .card {
        width: 200px !important;
        min-width: 200px !important;
        height: 200px !important;
        border: 1px solid black;
        border-radius: 3px;
        margin: 8px;
        transition: all 1.5s;
        display: flex;
        justify-content: center;
        align-items: center;
        background-size: 200px 200px !important;
        background-repeat: no-repeat !important;
    }

        .card:hover {
            box-shadow: 0px 0px 50px -10px #bbb;
            height: 300px !important;
            background-size: 200px 300px !important;
            background-repeat: no-repeat !important;
        }
</style>

<div class="movies">
    @{
        if (Model != null)
        {
            foreach (var data in Model)
            {
                <div>
                    @data.Name
                    <a href="@data.VideoLink" style="background: url(@data.ImageLink);" class="card">
                        <div class="rate">
                            @data.Rate
                        </div>
                    </a>
                    <div class="explanation">
                        @data.Explanation
                    </div>
                </div>
            }
        }
    }
</div>
